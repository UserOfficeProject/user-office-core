{
  "name": "user-office-core",
  "description": "This is user office core repository including both backend and frontend.",
  "version": "1.0.0",
  "type": "commonjs",
  "author": "SWAP",
  "license": "ISC",
  "scripts": {
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd apps/user-office-backend && npm run test",
    "test:frontend": "cd apps/user-office-frontend-e2e && npm run cy:run",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\" \"npm run lint:e2e\"",
    "lint:backend": "cd apps/user-office-backend && npm run lint",
    "lint:frontend": "cd apps/user-office-frontend && npm run lint",
    "lint:e2e": "cd apps/user-office-frontend-e2e && npm run lint",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:backend": "cd apps/user-office-backend && npm run build",
    "build:frontend": "cd apps/user-office-frontend && npm run build",
    "install:all": "concurrently \"npm run install:backend\" \"npm run install:frontend\" \"npm run install:user-office-frontend-e2e\"",
    "install:backend": "cd apps/user-office-backend && npm install",
    "install:frontend": "cd apps/user-office-frontend && npm install",
    "install:user-office-frontend-e2e": "cd apps/user-office-frontend-e2e && npm install",
    "install:libs:shared-types": "cd libs/shared-types && npm install",
    "install:libs:validation": "cd libs/validation && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:e2e": "concurrently \"npm run dev:backend:e2e\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/user-office-backend && npm run dev",
    "dev:backend:e2e": "cd apps/user-office-backend && npm run dev:e2e",
    "dev:frontend": "cd apps/user-office-frontend && npm run dev",
    "generate:shared:types": "cd apps/user-office-frontend && npm run generate:local",
    "e2e:after:dev": "concurrently -k -s first \"wait-on http://localhost:3000 && cd apps/user-office-frontend-e2e && npm run cy:run:action\" \"npm run dev:e2e\""
  },
  "keywords": [
    "duo",
    "swap",
    "user-office",
    "monorepo"
  ],
  "lint-staged": {
    "*": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "concurrently": "^7.2.1",
    "wait-on": "^6.0.1"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0"
  }
}
