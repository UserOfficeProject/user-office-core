    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug on chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach to Windows Docker container",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "protocol": "inspector",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "C:\\app"
        }
    ]
}